{
  "compilerOptions": {
    "composite": true,
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": [
      "es2022"
    ],
    "rootDir": "../",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "ts/**/*.ts",
    "test/**/*.ts",
    "../contracts/build/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
